<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pktech.newapp">

    <!-- Internet (future Firebase / backup / login use ke liye) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- PDF save + backup -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"/>

    <application
        android:name=".NewAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewApp">

        <!-- Splash (Launcher Entry) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.NewApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login Screen -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"/>

        <!-- Dashboard / Home -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"/>

        <!-- Employees -->
        <activity android:name=".ui.employee.EmployeeListActivity"/>
        <activity android:name=".ui.employee.AddEmployeeActivity"/>

        <!-- Shift Types -->
        <activity android:name=".ui.shift.ShiftTypeActivity"/>

        <!-- Calendar -->
        <activity android:name=".ui.calendar.CalendarActivity"/>

        <!-- Holidays -->
        <activity android:name=".ui.holiday.HolidayActivity"/>

        <!-- Comp Off -->
        <activity android:name=".ui.compoff.CompOffActivity"/>

        <!-- Reports -->
        <activity android:name=".ui.report.ReportActivity"/>

        <!-- Settings (Future Ready) -->
        <activity android:name=".ui.settings.SettingsActivity"/>

    </application>

</manifest>
